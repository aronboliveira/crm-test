{
  "compilerOptions": {
    "module": "preserve",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["react", "jest"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,

    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*", "index.js"],
  "exclude": ["node_modules", "__tests__", "__mocks__", "e2e", "cypress"]
}
